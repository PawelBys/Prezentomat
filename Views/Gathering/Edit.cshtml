@model Prezentomat.Models.GatheringClass

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<main>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
    <div class="Clear-flex-box-row">
        <div class="Flex-box-col">
            <h2>Edytuj zbiórke</h2>

            Oczekiwana kwota
            <div class="Clear-flex-box-col">
                <div class="Flex-box-input">
                    <img src="~/Images/cash.png" />
                    @Html.EditorFor(model => model.target_amount, new { htmlAttributes = new { @class = "form-control" } })

                </div>
            </div>

            Data końca zbiórki
            <div class="Clear-flex-box-col">
                <div class="Flex-box-input">
                    <img src="~/Images/data.png" />
                    @Html.EditorFor(model => model.finish_date, new { htmlAttributes = new { @class = "form-control" } })
                    <br>

                </div>
            </div>

            Nazwa zbiórki
            <div class="Clear-flex-box-col">
                <div class="Flex-box-input">
                    <img src="~/Images/name.png" />
                    @Html.EditorFor(model => model.gathering_name, new { htmlAttributes = new { @class = "form-control" } })
                    <br>

                </div>
            </div>




            <input type="submit" value="Zapisz" style="border: 1px solid; border-radius: 15px" />
            <br>
            @Html.ValidationMessageFor(model => model.target_amount, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.finish_date, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.gathering_name, "", new { @class = "text-danger" })
        </div>
    </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
</body>
    </main>
</html>
